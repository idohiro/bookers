<h1>Books</h1>

<table>

    <tr>
      <th>
        title
      </th>
      <th>
        body
      </th>
  </tr>
    <% @books.each do |book| %>
  <tr>


        <td><%=book.title%></td>
            <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destory", book_path(book) %></td>
   <% end %>
</tr>

</table>

<h2>new books</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 style="color: white;background-color:red;"><%= pluralize(@book.errors.count, "error") %> errors prohibited this book from being saved:</h2>
      <% if @book.errors.include?(:title) %>
         <p style="color: black; background-color:gray;"><%= @book.errors.full_messages_for(:title).first %>
      <% end %>
      <% if @book.errors.include?(:body) %>
        <p style="color: black; background-color:gray;"><%= @book.errors.full_messages_for(:body).first %>
      <% end %>
    </div>
  <% end %>
<div class="field">
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>


